<?xml version="1.0" encoding="utf-8"?><!-- 矩形圆角+左右两边为一个圆弧 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">

    <size
        android:width="10dp"
        android:height="8dp" />

    <solid android:color="#80E6E6E6" />

    <!-- 圆角半径是高度的一般就是一个圆弧了 -->
    <corners android:radius="1dp" />

</shape>