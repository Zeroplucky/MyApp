<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20px"
    android:layout_marginRight="10dp"
    android:layout_marginTop="20px"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/voice_text_switch_iv"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/icon_voice" />

    <EditText
        android:id="@+id/et_inputMessage"
        android:layout_width="0dp"
        android:layout_height="120px"
        android:layout_weight="1"
        android:background="@drawable/corners_edit_white"
        android:minHeight="120px"
        android:minLines="3"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/voice_text"
        style="@style/text_subhead_black"
        android:layout_width="0dp"
        android:layout_height="120px"
        android:layout_weight="1"
        android:background="@drawable/corners_edit"
        android:gravity="center"
        android:minHeight="36dp"
        android:text="按住说话"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:src="@drawable/icon_chat_expression" />

    <ImageView
        android:id="@+id/emotion_add"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:src="@drawable/icon_more" />

    <com.example.widget.StateButton
        android:id="@+id/emotion_send"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:padding="1dp"
        android:text="发送"
        android:textColor="@color/white"
        android:visibility="gone"
        app:normalBackgroundColor="@color/qq_blue"
        app:pressedBackgroundColor="@color/colorPrimaryDark"
        app:radius="5dp" />

</com.zhy.autolayout.AutoLinearLayout>
