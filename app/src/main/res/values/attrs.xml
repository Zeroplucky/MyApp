<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--当属性重复使用是 写成全局使用-->
    <attr name="normalTextColor" format="color|reference" />
    <attr name="textSize" format="dimension" />

    <declare-styleable name="LoadingView">
        <attr name="outerCircleRadius" format="dimension|reference" />
        <attr name="outerCircleColor" format="color|reference" />
        <attr name="innerTriangleRadius" format="dimension|reference" />
        <attr name="innerTriangleColor" format="color|reference" />
        <attr name="backgroundColor" format="color|reference" />
        <attr name="isNeedBackground" format="boolean" />
        <attr name="strokeWidth" format="dimension|reference" />
    </declare-styleable>


    <!-- 按钮自定义属性 -->
    <declare-styleable name="StateButton">
        <!--text color-->
        <attr name="normalTextColor" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="radius" format="dimension|reference" />
        <attr name="round" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />
    </declare-styleable>


    <declare-styleable name="ScrollingViewHeaderLayout">
        <attr name="headVisibleMinHeight" format="dimension" />
        <attr name="isSeriesScroll" format="boolean" />
        <attr name="headScrollMode">
            <enum name="snap" value="1" />
            <enum name="normal" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ScrollingViewHeaderLayout_Layout">
        <attr name="isHeaderLayout" format="boolean" />
        <attr name="isScrollingLayout" format="boolean" />
        <attr name="isFlexibleLayout" format="boolean" />
        <attr name="flexibleRatio" format="float" />
        <attr name="isGradientLayout" format="boolean" />
        <attr name="gradientColor" format="color" />
    </declare-styleable>

    <!--自定义密码输入框-->
    <declare-styleable name="PSEditText">
        <attr name="drawable_hide" format="integer" />
        <attr name="drawable_show" format="integer" />
        <attr name="tint_color" format="color" />
        <attr name="additionalTouchTargetSize" format="dimension" />
    </declare-styleable>


    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension" />
        <attr name="indicatorName" format="string" />
        <attr name="indicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="DrawerBehavior">
        <attr name="android:layout_gravity" />
    </declare-styleable>

    <declare-styleable name="TouchPullView">
        <attr name="pColor" format="color" />
        <attr name="pRadus" format="dimension" />
        <attr name="pDragHeight" format="dimension" />
        <attr name="pTangentAngle" format="integer" />
        <attr name="pTargeWidth" format="dimension" />
        <attr name="pTargetGravityHeight" format="dimension" />
        <attr name="pContentDrawable" format="reference" />
        <attr name="pContentDrawableMargin" format="dimension" />
    </declare-styleable>

    <!--锯齿背景虚线边框-->
    <declare-styleable name="CouponView">
        <attr name="cv_semicircle_gap" format="dimension|reference" />
        <attr name="cv_semicircle_radius" format="dimension|reference" />
        <attr name="cv_semicircle_color" format="color|reference" />
        <attr name="cv_dash_line_length" format="dimension|reference" />
        <attr name="cv_dash_line_gap" format="dimension|reference" />
        <attr name="cv_dash_line_height" format="dimension|reference" />
        <attr name="cv_dash_line_color" format="color|reference" />
        <attr name="cv_is_semicircle_top" format="boolean|reference" />
        <attr name="cv_is_semicircle_bottom" format="boolean|reference" />
        <attr name="cv_is_semicircle_left" format="boolean|reference" />
        <attr name="cv_is_semicircle_right" format="boolean|reference" />
        <attr name="cv_is_dash_line_top" format="boolean|reference" />
        <attr name="cv_is_dash_line_bottom" format="boolean|reference" />
        <attr name="cv_is_dash_line_left" format="boolean|reference" />
        <attr name="cv_is_dash_line_right" format="boolean|reference" />
        <attr name="cv_dash_line_margin_top" format="dimension|reference" />
        <attr name="cv_dash_line_margin_bottom" format="dimension|reference" />
        <attr name="cv_dash_line_margin_left" format="dimension|reference" />
        <attr name="cv_dash_line_margin_right" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="WheelView">
        <attr name="textSize" />
        <attr name="textVerticalSpacing" format="dimension" />
        <attr name="normalTextColor" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedLineColor" format="color" />
        <attr name="visibilityCount" format="integer" />
        <attr name="textGravity" format="integer">
            <flag name="top" value="0x30" />

            <flag name="bottom" value="0x50" />

            <flag name="left" value="0x03" />

            <flag name="right" value="0x05" />

            <flag name="center_vertical" value="0x10" />

            <flag name="center_horizontal" value="0x01" />

            <flag name="center" value="0x11" />

            <flag name="start" value="0x00800003" />

            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="selectPosition" format="integer" />
    </declare-styleable>

    <!--倒计时 控件-->
    <declare-styleable name="CountDownView">
        <attr name="textSize" />
        <attr name="defaultTime" format="integer" />
    </declare-styleable>

</resources>